<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbblow"
    tools:context=".Calculator_BMI">


    <TextView
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/height"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="120dp"
        android:gravity="center_horizontal"
        android:text="Height (cm)"
        android:textColor="@color/yallow"
        android:textSize="24sp" />
    />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="99dp"
        android:gravity="center_horizontal"
        android:text="Weight (kg)"
        android:textColor="@color/yallow"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/height"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="entre your height cm "
        android:inputType="number" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:hint="entre your weight kg"
        android:inputType="number" />

    <Button
        android:id="@+id/calc"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="201dp"
        android:background="@drawable/clicked_button"
        android:onClick="calculateBMI"
        android:text=" calculate BMI"
        android:textColor="@color/blown" />

    <TextView
        android:id="@+id/result"
        android:layout_width="234dp"
        android:layout_height="157dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:textColor="@color/yallow"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="226dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Calculator  BMI "
        android:textColor="@color/yallow"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>